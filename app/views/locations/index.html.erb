<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>Postal code</th>
    <th>Room</th>
    <th>Latitude</th>
    <th>Longitude</th>
		<th>Height</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%=h location.name %></td>
    <td><%=h location.address %></td>
    <td><%=h location.city %></td>
    <td><%=h location.postal_code %></td>
    <td><%=h location.room %></td>
    <td><%=h location.latitude %></td>
    <td><%=h location.longitude %></td>
		<td><%=h location.height %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

